<h1>Trips</h1>
<table class="table table-default">
    <thead>
	<tr>
	    <th>Meeting time</th>
	    <th>Start date</th>
	    <th>End date</th>
	    <th>From</th>
	    <th>To</th>
	    <th>Meeting place</th>
	    <th>Driver first name</th>
	    <th>Driver last name</th>
	    <th>Notes</th>
	    <th colspan="3"></th>
	</tr>
    </thead>

    <tbody>
	<% @trips.each do |trip| %>
	    <tr>
		<td><%= trip.meeting_time.strftime('%I:%M %p') %></td>
		<td><%= trip.start_date.strftime('%B %d %G') %></td>
		<td><%= trip.end_date.strftime('%B %d %G') %></td>
		<td><%= trip.from %></td>
		<td><%= trip.to %></td>
		<td><%= trip.meeting_place %></td>
		<td><%= trip.driver_first_name %></td>
		<td><%= trip.driver_last_name %></td>
		<td><%= trip.notes %></td>
		<td><%= link_to 'Show', trip %></td>
		<td><%= link_to 'Edit', edit_trip_path(trip) %></td>
		<td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	    </tr>
	<% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Trip', new_trip_path %> |
<%= link_to 'All Trips', trips_path %>
