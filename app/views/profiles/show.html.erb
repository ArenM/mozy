<p>
    <strong>First name:</strong>
    <%= @profile.first_name %>
</p>

<p>
    <strong>Last name:</strong>
    <%= @profile.last_name %>
</p>

<p>
    <strong>Email:</strong>
    <%= @profile.user.email %>
</p>

<p>
    <strong>Address:</strong>
    <%= @profile.street_address %>
    <%= @profile.town %>
    <%= @profile.state %>
</p>

<% if @trip.length > 0 %>
    <table class="table table-default">
	<thead>
	    <tr>
		<th>Meeting time</th>
		<th>Start date</th>
		<th>End date</th>
		<th>Day</th>
		<th>From</th>
		<th>To</th>
		<th>Meeting place</th>
		<th>Driver first name</th>
		<th>Driver last name</th>
		<th>Notes</th>
		<th colspan="3"></th>
	    </tr>
	</thead>

	<tbody>
	    <% @trip.each do |trip| %>
		<tr>
		    <td><%= trip.meeting_time.strftime('%I:%M %p') %></td>
		    <td><%= trip.start_date.strftime('%B %d %G') %></td>
		    <td><%= trip.end_date.strftime('%B %d %G') %></td>
		    <td><%= trip.start_date.strftime('%A') %></td>
		    <td><%= trip.from %></td>
		    <td><%= trip.to %></td>
		    <td><%= trip.meeting_place %></td>
		    <td><%= trip.driver_first_name? ? trip.driver_first_name : @profile.first_name %></td>
		    <td><%= trip.driver_last_name? ? trip.driver_last_name : @profile.last_name %></td>
		    <td><%= trip.notes %></td>
		    <td><%= link_to 'Show', trip %></td>
		</tr>
	    <% end %>
	</tbody>
    </table>
<% end %>
<div class="btn-group">
    <%= link_to 'Edit', edit_profiles_path, class: "btn btn-secondary" if @profile == current_user.profile %>
    <%= link_to 'Back', :back, class: "btn btn-secondary" %>
</div>
